<div class="container-fluid" style="text-align:center;padding-left:20%;padding-right:20%;">
  <div class="panel panel-info" style="text-align:center;">
      <div class="panel-heading">
        <h3>
          Profil Düzenleyin
        </h3>
        
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <div class="panel-body">
        <div class="row">
          <div  class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <%= devise_error_messages! %>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <label>E-Mail</label>
          </div>
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control" %>
          </div>
        </div>
        
        <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>
          </div>
        </div>
        
        <div class="row"><br>
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <label>Şifre </label> <i>(Değiştirmek istemiyorsanız boş bırakınız)</i>
            
          </div>
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <%= f.password_field :password, autocomplete: "off",class: "form-control" %>
          </div>
        </div>
        
        <div class="row"><br>
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <label>Şifre Tekrarı</label>
          </div>
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <input autocomplete="new-password" type="password" name="user[password_confirmation]" id="user_password_confirmation" class="form-control">
          </div>
        </div>
        
        <div class="row"><br>
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <label>Mevcut Şifre</label><i>Değişikliklerin onaylanması için gereklidir.</i>
          </div>
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <%= f.password_field :current_password, autocomplete: "current-password",class: "form-control" %>
          </div>
        </div>
        
        
      </div>
      <div class=panel-footer>
        <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <%= f.submit "Update",class: "btn btn-success" %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <div class="panel panel-danger" style="text-align:center;">
      <div class="panel-heading">
        <h3>Hesabımı sil</h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <h4>Hoşlanmadınız mı?</h4>
          </div>
        </div>
      </div>
      <div class="panel-footer">
        <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <%= button_to "Hesabımı Sil", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete,class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>
</div>
